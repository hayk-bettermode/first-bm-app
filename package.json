{
  "name": "badge-automations",
  "version": "1.0.0",
  "author": "Hayk Ghazaryan",
  "private": true,
  "description": "Badge Automations",
  "scripts": {
    "start": "node -r dotenv/config dist/index.js",
    "start:dev": "nodemon --exec ts-node -r dotenv/config -r tsconfig-paths/register src/index.ts",
    "build": "npx tsc && npx tsc-alias",
    "watch": "npx tsc -w",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "npx tsc --noEmit",
    "lint": "npm run type-check && npm run format:check"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.15.21",
    "@types/uuid": "^9.0.7",
    "fast-xml-parser": "^5.3.2",
    "nodemon": "^3.1.4",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@tribeplatform/gql-client": "2.3.7",
    "@tribeplatform/node-logger": "^1.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "gql.tada": "^1.9.0",
    "graphql": "^16.12.0",
    "graphql-request": "^7.3.5",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "node-cron": "^4.2.1",
    "uuid": "^9.0.1"
  }
}
