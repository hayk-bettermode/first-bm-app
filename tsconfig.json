{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "baseUrl": "src",
      "plugins": [
        {
          "name": "gql.tada/ts-plugin",
          "schema": "https://api.bettermode.com",
          "tadaOutputLocation": "./src/gql/graphql-env.d.ts",
          "trackFieldUsage": false
        }
      ],
      "paths": {
        "@controllers": ["controllers"],
        "@enums": ["enums"],
        "@interfaces": ["interfaces"],
        "@routers": ["routers"],
        "@services": ["services"],
        "@utils": ["utils"],
        "@clients": ["clients"],
        "@types": ["types"],
        "@gql": ["gql"],
        "@/*": ["*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }